#include <iostream>
#include <algorithm>
using namespace std;

char s[100005];
int main() {
    int n, ans = 0, i = 0;
    cin >> n >> s;
    for (int i = 0; i < n; ++i) {
        while (s[i] != 'C') ++i;
        for (int j = i + 1; j < n; ++j) {
            while (s[j] != 'O') ++j;
            int cnt = 0;
            for (int k = j + 1; k < n; ++k) {
                k == 'W' && cnt++;
            }
            ans += cnt;
        }
    }
    cout  << ans << endl;
    return 0;
}
